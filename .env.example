# Application Settings
APP_NAME=voiceclone
APP_ENV=production
DEBUG=false
SECRET_KEY=your-secret-key-change-in-production

# Server Settings
HOST=127.0.0.1
PORT=8011

# Database Settings (SQLite for simple deployment, PostgreSQL for production scale)
DATABASE_URL=sqlite+aiosqlite:///./data/voiceclone.db
# DATABASE_URL=postgresql://voiceclone:voiceclone@localhost:5432/voiceclone

# Redis Settings (optional - for caching and queues)
# REDIS_URL=redis://localhost:6379/0

# Modal.com Settings
MODAL_TTS_ENDPOINT=https://rahul4webdev--voiceclone-tts-synthesize.modal.run

# Voice Storage Settings
VOICE_STORAGE_PATH=./data/voices
MAX_VOICE_SAMPLE_SIZE_MB=50
ALLOWED_AUDIO_FORMATS=["wav","mp3","flac","ogg","m4a"]

# TTS Settings
DEFAULT_TTS_MODEL=xtts
TTS_SAMPLE_RATE=24000
TTS_CHUNK_SIZE=4096
MAX_TEXT_LENGTH=5000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# CORS Settings
CORS_ORIGINS=["https://voiceclone.gahfaudio.in","http://localhost:3000"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
